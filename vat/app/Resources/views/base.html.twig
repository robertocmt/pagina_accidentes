<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Víctimas Accidentes de Tráfico{% endblock %}</title>
        {% block stylesheets %}
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/iconos.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/estilo.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container mt-2">
            <div class="d-flex flex-row align-items-center">
                <img class="logo" src="{{ asset('imagenes/ponlefreno.svg') }}">
                <h1>VAT</h1>
                <form action="/busqueda" class="form-inline ml-5 form_busqueda">
                        <input type="text" class="form-control texto_busqueda" id="BusquedaProvincia" name="BusquedaProvincia" aria-describedby="busqueda" placeholder="Granada, Madrid...">
                        <button type="submit" class="btn btn-danger submit_buqueda">Buscar</button>
                </form>
                <a href="#" class="fa fa-twitter"></a>
                <a href="#" class="fa fa-instagram ml-2"></a>
            </div>
        </div>

        <div class="container mt-3 contenido">
            <nav class="navbar navbar-expand-lg navbar-dark">
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
				  	<ul class="navbar-nav">
				      <li class="nav-item active">
				        <a class="nav-link" href="/">Inicio</a>
				      </li>
				      <li class="nav-item active">
				        <a class="nav-link" href="/t_accidente">Tipo accidente</a>
				      </li>
                      <li class="nav-item active">
                        <a class="nav-link" href="/a_provincia">Accidentes en Provincias</a>
                      </li>
                      <li class="nav-item active">
                        <a class="nav-link" href="/a_comunidad">Accidentes en C.Autónomas</a>
                      </li>
				    </ul>
				</div>
			</nav>
            {% block body %}
            {% endblock %}
            <footer class="mb-5 d-flex align-items-center justify-content-center">
                <p>Roberto Carlos Moyano Torres</p>
            </footer>
        </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
            <script src="{{ asset('js/bootstrap.bundle.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/bootstrap.js.map') }}" type="text/javascript"></script>
            <script src="{{ asset('js/collapse.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
